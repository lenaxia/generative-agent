[flake8]
max-line-length = 88
extend-ignore =
    E203,
    W503,
    E501,
    I100,
    I201,
    I202,
    D415,
    D205,
    W293,
    D202,
    PT012,
    E402,
    I101,
    E712,
    PT027,
    B018,
    B023,
    B017,
    PT011,
    PT018
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    agents/deprecated,  # Deprecated code
    .benchmarks,
    .roo,
    build,
    dist,
    *.egg-info
per-file-ignores =
    tests/*:D100,D101,D102,D103,D104
    __init__.py:F401
    examples/*:D100,D101,D102,D103,D104
max-complexity = 10
docstring-convention = google
