[flake8]
max-line-length = 88
extend-ignore =
    E203,
    W503,
    E501
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    agents/deprecated,  # Deprecated code
    .benchmarks,
    .roo,
    build,
    dist,
    *.egg-info
per-file-ignores =
    tests/*:D100,D101,D102,D103,D104
    __init__.py:F401
    examples/*:D100,D101,D102,D103,D104
max-complexity = 10
docstring-convention = google